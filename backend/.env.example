# Environment Configuration
# Copy this file to .env and populate with your actual values

# ================================
# REQUIRED
# ================================

# OpenAI Realtime API Key
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ================================
# SERVER CONFIGURATION
# ================================

# Server Port (Render uses PORT=10000 by default)
# Development: 3002
# Production (Render): 10000
PORT=3002

# Node Environment
# Options: development, production
NODE_ENV=development

# ================================
# CORS CONFIGURATION
# ================================

# Allow all origins (DEVELOPMENT ONLY - NOT SECURE)
# Set to true only for local development
# Set to false for production
CORS_ALLOW_ALL=false

# Allowed Origins (comma-separated, no spaces)
# Add your frontend URLs here for production
# Examples:
#   - Local: https://localhost:3001
#   - Render: https://your-frontend.onrender.com
#   - Custom domain: https://yourdomain.com
ALLOWED_ORIGINS=https://localhost:3001
